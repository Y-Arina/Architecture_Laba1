@model Laba45.Models.Entity.Doctor
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>AddDoctor</title>
    <style>
        .b {
            height: 50px;
            width: 300px;
            font-size: 20px;
            background-color: cornflowerblue;
            color: white;
        }
    </style>
</head>
<body>
    <div align="center">
        @using (Html.BeginForm("EditDoctor1", "Hospital", FormMethod.Post))
        {
            <input id="Id" type="hidden" name="Id" value="@Model.Id">
            <label>Введите фамилию врача</label>
            <input type="text" name="Surname" value="@Model.Surname" /><br />
            <label>Введите имя врача</label>
            <input type="text" name="Name" value="@Model.Name"/><br />
            <label>Введите отчество врача</label>
            <input type="text" name="Patronymic" value="@Model.Patronymic"/><br />
            <label>Введите профессию врача</label>
            <input type="text" name="Profession" value="@Model.Profession" /><br />
            <label>Введите кабинет врача</label>
            <input type="text" name="CabinetNumber" value="@Model.CabinetNumber" /><br />
            <label>Введите время начала работы врача</label>
            <input type="text" name="StartHour" value="@Model.StartHour"/><br />
            <label>Введите время конца работы врача</label>
            <input type="text" name="FinishHor" value="@Model.FinishHour"/><br />
            <input type="submit" value="Изменить данные о враче" class="b" />
        }
    </div>
    <div>
        @Html.ActionLink("Вернуться на главную страницу", "MainPage")
    </div>
</body>
</html>
