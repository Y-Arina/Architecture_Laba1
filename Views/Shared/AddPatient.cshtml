@model Guid
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>AddPatient</title>
    <style>
        .b {
            height: 50px;
            width: 300px;
            font-size: 20px;
            background-color: cornflowerblue;
            color: white;
        }
    </style>
</head>
<body>
    <h1 align="center">Добавление пациента</h1>
    <div align="center">
        @using (Html.BeginForm("AddPatient2", "Hospital", FormMethod.Post))
        {
            <input id="Id" type="hidden" name="Id" value="@Model">
            <label>Введите фамилию пациента</label>
            <input type="text" name="Surname" /><br />
            <label>Введите имя пациента</label>
            <input type="text" name="Name" /><br />
            <label>Введите отчество Пациента</label>
            <input type="text" name="Patronymic" /><br />
            <input type="submit" value="Добавить пациента" class="b" />
        }
    </div>
    <div>
        @Html.ActionLink("Вернуться на главную страницу", "MainPage")
    </div>
</body>
</html>
